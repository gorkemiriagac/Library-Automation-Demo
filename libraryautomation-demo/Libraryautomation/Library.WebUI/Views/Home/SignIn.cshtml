@using Library.WebUI.Models.SignModels

@model SignInViewModels
<div class="container-fluid bg-danger vh-100">
	<div style="height:200px;width:100%;"></div>

	<div class="row">
		<div class="col-md-4 col offset-md-4">
			<div asp-validation-summary="ModelOnly"></div>
			<form asp-controller="Home" asp-action="SignIn" method="post">
				<h2> Sign In</h2>
				<div class="form-group">
					<label asp-for="Email"></label>
					<input asp-for="Email" class="form-control" placeholder="name@example.com" />
					<span asp-validation-for="Email" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Password"></label>
					<input asp-for="Password" type="password" class="form-control" placeholder="123456s" />
					<span asp-validation-for="Password" class="text-danger"></span>
				</div>
				<div class="buttons d-flex justify-content-center flex-column text-center mt-3">
					<button type="submit" class="btn btn-success">Sign Up</button>
					<a href="/Home/SignUp"><h4 class="mt-4">I Don't have an account</h4></a>
				</div>

			</form>
		</div>
	</div>
</div>