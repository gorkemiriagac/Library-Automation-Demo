@using Library.WebUI.Models.SignModels
@model SignUpViewModels

<div class="container-fluid vh-100 bg-danger">
<div style="height:200px;width:100%;"></div>
<div class="row">
	<div class="col-md-4 col offset-md-4">
		<div asp-validation-summary="ModelOnly"></div>
		<form asp-controller="Home" asp-action="SignUp" method="post">
			<h2> Sign Up</h2>
			<div class="form-group">
				<label asp-for="FullName"></label>
				<input asp-for="FullName" class="form-control" placeholder="John Doe" />
				<span asp-validation-for="FullName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Email"></label>
				<input asp-for="Email" class="form-control" placeholder="johndoe@example.com" />
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Password"></label>
				<input asp-for="Password" type="password" class="form-control" placeholder="123456"/>
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="ConfirmPassword"></label>
				<input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="123456" />
				<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
			</div>
			<div class="buttons d-flex justify-content-center flex-column text-center mt-3">
					<button type="submit" class="btn btn-success">Sign Up</button>
					<a href="/Home/SignIn"><h4 class="mt-4">I Have already account</h4></a>
				</div>
				
		</form>
	</div>
</div>
</div>